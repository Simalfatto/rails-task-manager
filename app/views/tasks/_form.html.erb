<%= form_with model: task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% if task.new_record? %>
    <%= f.submit %>
  <% else %>
    <%= f.check_box :completed %>
    <%= f.label :completed, "Mark this task as completed" %>
    <%= f.submit %>
  <% end %>
<% end %>
